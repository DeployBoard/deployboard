{
  "name": "deployboard",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:schema": "turbo run build:schema",
    "dev": "turbo run dev --parallel",
    "mongo": "docker run -itd --rm -p 27017:27017 -v db-data:/data/db mongo:5",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,md}\"",
    "seed": "turbo run seed",
    "clean": "turbo run clean --parallel && rm -rf node_modules && rm -rf package-lock.json"
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "^1.3.1"
  }
}
