{
  "name": "auth",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": "24.x",
    "npm": "11.x"
  },
  "scripts": {
    "dev": "PORT=3002 HOST=localhost ACCESS_TOKEN_SECRET=dev-secret-change-in-production nodemon --delay 500ms --exec babel-node ./src/index.js",
    "start": "PORT=3002 HOST=localhost ACCESS_TOKEN_SECRET=dev-secret-change-in-production node ./dist/index.js",
    "clean": "rm -rf node_modules/ dist/",
    "build": "babel src --out-dir dist",
    "prettier": "prettier --config ./.prettierrc --write \"**/*.js\"",
    "pretest": "eslint --ignore-path .gitignore .",
    "postinstall": "rm -rf dist && npm run build",
    "lint": "npm run prettier --write --check --config ./.prettierrc \"**/*.js\" && eslint --fix ./src",
    "release": "release-it patch --no-npm.publish"
  },
  "dependencies": {
    "express": "^5.2.1",
    "samlify": "^2.10.2",
    "@authenio/samlify-node-xmllint": "^2.0.0",
    "xml2js": "^0.6.2",
    "cors": "^2.8.5",
    "mongoose": "^9.0.2",
    "models": "*",
    "dotenv": "^17.2.3",
    "mongoose-bcrypt": "^1.11.0",
    "mongoose-timestamp": "^0.6.0",
    "nodemailer": "^7.0.11",
    "uuid": "^13.0.0",
    "loglevel": "^1.9.2",
    "jsonwebtoken": "^9.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.7.4"
  }
}
